{
  "manifest_version": 2,
  "name": "ravel-checker",
  "description": "Ravel Checker",
  "version": "1.0.0",
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage",
    "notifications",
    "https://ajax.googleapis.com/"
  ],
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://ravelresidence.studentexperience.nl/*"
      ],
      "js": [
        "jquery-3.2.1.min.js",
        "content_scripts/ravel-checker.js"
      ]
    }
  ]
}
